{
    "private": true,
    "name": "promises",
    "description": "Promises utility modules",
    "license": "MIT",
    "keywords": [
        "promise",
        "promises",
        "utility",
        "modules",
        "async",
        "await",
        "deferred"
    ],
    "author": {
        "name": "Yisrael Eliev",
        "url": "https://github.com/yisraelx",
        "email": "yisraelx@gmail.com"
    },
    "homepage": "https://github.com/yisraelx/promises#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yisraelx/promises.git"
    },
    "bugs": {
        "url": "https://github.com/yisraelx/promises/issues"
    },
    "scripts": {
        "babel:es5": "lerna exec \"babel index.js --out-file es5.js --presets=es2015\"",
        "babel:umd": "lerna exec \"babel index.js --out-file umd.js --presets=es2015 --plugins=babel-plugin-transform-es2015-modules-umd\"",
        "babel:umd.min": "lerna exec \"babel index.js --out-file umd.min.js --presets=es2015,babel-preset-babili --plugins=babel-plugin-transform-es2015-modules-umd\"",
        "build": "run-s build:*",
        "build:bundle": "lerna exec ts-node ../../scripts/build-bundle.ts",
        "build:babel": "lerna exec ts-node ../../scripts/build-babel.ts",
        "build:tsc": "tsc --project modules",
        "ci:after": "yarn coverage",
        "ci:script": "yarn validate",
        "clean": "run-s clean:*",
        "clean:build": "rimraf modules/**/*.js modules/**/*.d.ts modules/**/*.js.map",
        "clean:create": "rimraf modules/**/README.md modules/**/LICENSE",
        "clean:temp": "rimraf coverage tmp",
        "cm": "git-cz",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "coverage": "codecov -f coverage/*.json",
        "create:license": "lerna exec \"node -e fs.createReadStream('../../LICENSE').pipe(fs.createWriteStream('LICENSE'));\"",
        "create:packages-list": "ts-node scripts/create-packages-list.ts",
        "create:readme": "lerna exec \"ts-node -r tsconfig-paths/register ../../scripts/create-readme.ts\"",
        "lint": "run-s lint:*",
        "lint:modules": "tslint modules/**/*.ts",
        "lint:test": "tslint test/**/*.ts",
        "make": "run-s clean create:* build:tsc build:* update:package-json",
        "precommit": "yarn validate",
        "prerelease": "yarn make",
        "postrelease": "conventional-github-releaser -p angular",
        "pretest": "yarn clean",
        "release": "lerna publish --conventional-commits --message \"chore: publish %s\"",
        "test": "karma start",
        "test:cross": "yarn test --browsers IE9,IE10,IE,Edge,Chrome,PhantomJS,Firefox",
        "test:ie": "yarn test --browsers IE9 IE10 IE",
        "update:package-json": "lerna exec ts-node ../../scripts/update-package-json.ts",
        "validate": "yarn test",
        "watch:tsc": "yarn build:tsc --watch",
        "watch:test": "yarn test --auto-watch --no-single-run"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/prompt"
        }
    },
    "peerDependencies": {
        "rxjs": "^5.5.7"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.0.0",
        "@commitlint/config-conventional": "^7.0.1",
        "@commitlint/prompt": "^7.0.0",
        "@types/babel-core": "^6.25.3",
        "@types/glob": "^5.0.35",
        "@types/jasmine": "^2.8.6",
        "@types/karma": "^1.7.3",
        "@types/lodash": "^4.14.105",
        "@types/node": "^9.4.7",
        "@types/webpack": "^3.8.8",
        "awesome-typescript-loader": "^3.5.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
        "babel-preset-babili": "^0.1.4",
        "babel-preset-es2015": "^6.24.1",
        "codecov": "^3.0.0",
        "commitizen": "^2.9.6",
        "conventional-github-releaser": "^2.0.0",
        "depcheck": "^0.6.9",
        "es6-promise": "^4.2.4",
        "glob": "^7.1.2",
        "husky": "^0.14.3",
        "jasmine-core": "^3.1.0",
        "karma": "^2.0.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-edge-launcher": "^0.4.2",
        "karma-firefox-launcher": "^1.1.0",
        "karma-ie-launcher": "^1.0.0",
        "karma-jasmine": "^1.1.1",
        "karma-phantomjs-launcher": "^1.0.4",
        "karma-tslint": "^1.1.0",
        "karma-typescript": "^3.0.12",
        "lerna": "^2.9.0",
        "lodash": "^4.17.5",
        "npm-run-all": "^4.1.2",
        "parse-comments": "^0.4.3",
        "rimraf": "^2.6.2",
        "rxjs": "^5.5.7",
        "ts-node": "^5.0.1",
        "tsconfig-paths": "^3.1.3",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2",
        "uglifyjs-webpack-plugin": "^1.2.2",
        "webpack": "3.11.0",
        "yarn": "^1.5.1"
    }
}
