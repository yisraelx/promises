{
    "private": true,
    "name": "promises",
    "description": "Promises library repository",
    "license": "MIT",
    "keywords": [
        "promise",
        "promises",
        "utilities",
        "utils",
        "modules",
        "modular",
        "async",
        "await",
        "deferred"
    ],
    "author": {
        "name": "Yisrael Eliev",
        "url": "https://github.com/yisraelx",
        "email": "yisraelx@gmail.com"
    },
    "homepage": "https://github.com/yisraelx/promises#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yisraelx/promises.git"
    },
    "bugs": {
        "url": "https://github.com/yisraelx/promises/issues"
    },
    "scripts": {
        "build": "run-s build:tsc build:rollup",
        "build:rollup": "lerna exec \"ts-node ../../scripts/build-rollup.ts\" --ignore @promises/interfaces",
        "build:tsc": "tsc -p tsconfig.build.json",
        "ci:after": "yarn coverage",
        "ci:script": "yarn validate",
        "clean": "run-s clean:*",
        "clean:build": "rimraf \"./modules/**/*.{js,d.ts,js.map}\"",
        "clean:create": "rimraf \"./modules/*/{README.md,LICENSE,.npmignore}\"",
        "cm": "git-cz",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "coverage": "codecov -f coverage/*.json",
        "create:ignore": "lerna exec \"ts-node ../../scripts/create-ignore.ts\"",
        "create:license": "lerna exec \"node -e fs.createReadStream('../../LICENSE').pipe(fs.createWriteStream('LICENSE'));\"",
        "create:packages-list": "ts-node scripts/create-packages-list.ts",
        "create:readme": "lerna exec \"ts-node -r tsconfig-paths/register ../../scripts/create-readme.ts\"",
        "lint": "run-s lint:*",
        "lint:modules": "tslint modules/**/*.ts",
        "lint:test": "tslint test/**/*.ts",
        "make": "run-s clean create:* build:tsc build:* update:package-json",
        "precommit": "yarn validate",
        "prerelease": "yarn make",
        "postrelease": "conventional-github-releaser -p angular",
        "pretest": "yarn clean",
        "release": "lerna publish --conventional-commits --message \"chore: publish %s\"",
        "test": "karma start",
        "test:cross": "yarn test --browsers IE9,IE10,IE,Edge,Chrome,PhantomJS,Firefox",
        "test:ie": "yarn test --browsers IE9 IE10 IE",
        "update:package-json": "lerna exec ts-node ../../scripts/update-package-json.ts",
        "validate": "yarn test",
        "watch:tsc": "yarn build:tsc --watch",
        "watch:test": "yarn test --auto-watch --no-single-run"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/prompt"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^7.0.0",
        "@commitlint/config-conventional": "^7.0.1",
        "@commitlint/prompt": "^7.0.0",
        "@types/handlebars": "^4.0.38",
        "@types/jasmine": "^2.8.6",
        "@types/karma": "^1.7.3",
        "@types/lodash": "^4.14.105",
        "@types/node": "^9.4.7",
        "codecov": "^3.0.0",
        "commitizen": "^2.9.6",
        "conventional-github-releaser": "^2.0.0",
        "depcheck": "^0.6.9",
        "es6-promise": "^4.2.4",
        "handlebars": "^4.0.11",
        "husky": "^0.14.3",
        "jasmine-core": "^3.1.0",
        "karma": "^2.0.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-edge-launcher": "^0.4.2",
        "karma-firefox-launcher": "^1.1.0",
        "karma-ie-launcher": "^1.0.0",
        "karma-jasmine": "^1.1.1",
        "karma-phantomjs-launcher": "^1.0.4",
        "karma-tslint": "^1.1.0",
        "karma-typescript": "^3.0.12",
        "lerna": "^2.9.0",
        "lodash": "^4.17.5",
        "npm-run-all": "^4.1.2",
        "parse-comments": "^0.4.3",
        "rimraf": "^2.6.2",
        "rollup": "^0.61.1",
        "rollup-plugin-alias": "^1.4.0",
        "rollup-plugin-cleanup": "^3.0.0-beta.1",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-postprocess": "^1.0.2",
        "rollup-plugin-typescript": "^0.8.1",
        "rollup-plugin-uglify": "^4.0.0",
        "rxjs": "^5.5.7",
        "ts-node": "^5.0.1",
        "tsconfig-paths": "^3.1.3",
        "tslib": "^1.9.3",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2",
        "yarn": "^1.5.1"
    }
}
