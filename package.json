{
  "name": "promises",
  "description": "Promises utility modules",
  "license": "MIT",
  "keywords": [
    "promise",
    "promises",
    "utility",
    "modules",
    "async",
    "await",
    "deferred"
  ],
  "author": {
    "name": "Yisrael Eliev",
    "url": "https://github.com/yisraelx",
    "email": "yisraelx@gmail.com"
  },
  "homepage": "https://github.com/yisraelx/promises#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yisraelx/promises.git"
  },
  "bugs": {
    "url": "https://github.com/yisraelx/promises/issues"
  },
  "scripts": {
    "babel:es5": "lerna exec \"babel index.js --out-file es5.js --presets=es2015\"",
    "babel:umd": "lerna exec \"babel index.js --out-file umd.js --presets=es2015 --plugins=babel-plugin-transform-es2015-modules-umd\"",
    "babel:umd.min": "lerna exec \"babel index.js --out-file umd.min.js --presets=es2015,babel-preset-babili --plugins=babel-plugin-transform-es2015-modules-umd\"",
    "build": "run-s build:*",
    "build:bundle": "lerna exec ts-node ../../scripts/build-bundle.ts",
    "build:babel": "lerna exec ts-node ../../scripts/build-babel.ts",
    "build:tsc": "tsc --project modules",
    "ci:after": "run-s coverage",
    "ci:before": "npm prune",
    "ci:script": "run-s validate",
    "clean": "run-s clean:*",
    "clean:build": "rimraf modules/**/*.js modules/**/*.d.ts modules/**/*.js.map",
    "clean:create": "rimraf modules/**/README.md modules/**/LICENSE",
    "clean:temp": "rimraf coverage tmp",
    "cm": "git-cz",
    "commitmsg": "validate-commit-msg",
    "coverage": "codecov -f coverage/*.json",
    "create:license": "lerna exec \"node -e fs.createReadStream('../../LICENSE').pipe(fs.createWriteStream('LICENSE'));\"",
    "create:packages-list": "ts-node scripts/create-packages-list.ts",
    "create:readme": "lerna exec \"ts-node -r tsconfig-paths/register ../../scripts/create-readme.ts\"",
    "lint": "run-s lint:*",
    "lint:modules": "tslint modules/**/*.ts",
    "lint:test": "tslint test/**/*.ts",
    "make": "run-s clean create:* build:tsc build:* update:package-json",
    "precm": "run-s validate",
    "prerelease": "run-s make",
    "pretest": "run-s clean",
    "release": "lerna publish --conventional-commits --message \"chore: publish\"",
    "test": "karma start",
    "test:cross": "npm t -- --browsers IE9,IE10,IE,Edge,Chrome,PhantomJS,Firefox",
    "test:ie": "npm t -- --browsers IE9 IE10 IE",
    "update:package-json": "lerna exec ts-node ../../scripts/update-package-json.ts",
    "validate": "npm test",
    "watch:tsc": "npm run build:tsc -- --watch",
    "watch:test": "npm test -- --auto-watch --no-single-run"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "Commit message violates the rules defined for this project. Please, execute `npm run cm` to generate a correct commit message with `commitizen`"
    }
  },
  "peerDependencies": {
    "rxjs": "^5.4.1"
  },
  "devDependencies": {
    "@types/babel-core": "^6.7.14",
    "@types/glob": "^5.0.30",
    "@types/jasmine": "^2.5.52",
    "@types/karma": "^0.13.36",
    "@types/lodash": "^4.14.66",
    "@types/node": "^8.0.1",
    "@types/webpack": "^2.2.16",
    "awesome-typescript-loader": "^3.1.3",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "depcheck": "^0.6.7",
    "es6-promise": "^4.1.0",
    "glob": "^7.1.2",
    "husky": "^0.13.4",
    "jasmine-core": "^2.6.4",
    "jasmine-promises": "^0.4.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-edge-launcher": "^0.4.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-tslint": "^1.0.1",
    "karma-typescript": "^3.0.4",
    "lerna": "^2.0.0-rc.5",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.2",
    "parse-comments": "^0.4.3",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.1",
    "ts-node": "^3.0.6",
    "tsconfig-paths": "^2.2.0",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "validate-commit-msg": "^2.12.2",
    "webpack": "^3.0.0"
  }
}
